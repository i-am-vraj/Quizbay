<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizbay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizbay"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.RegistrationActivity"></activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ChoiceActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DynamicListActivity" />
        <activity android:name=".activity.DynamicSubscribe" />
        <activity android:name=".DemoActivity" />
        <activity android:name=".activity.Dynamic_Quiz_Fastest_Finger_First_User_Name" />
        <activity android:name=".activity.StartDynamicQuizActivity" />
        <activity android:name=".activity.QuizStartActivity" />
        <activity android:name=".activity.QuizBay_Question_Activity" />
        <activity android:name=".activity.PastQuizesActivity" />
        <activity android:name=".activity.QuizbayProfileActivity" />
        <activity android:name=".activity.LeaderboardActivity" />
        <activity android:name=".activity.OverallLeaderboardActivity" />
        <activity android:name=".activity.QuizListActivity" />
        <activity android:name=".activity.ScoreBoardActivity" />
        <activity android:name=".activity.CategoryActivity" />
        <activity android:name=".activity.QuizDynamicQuestion" />
        <activity android:name=".activity.DynamicQuizActivity1" />
        <activity android:name=".activity.DynamicQuizActivity2" />
        <activity android:name=".activity.DynamicQuizActivity3" />
        <activity android:name=".activity.DynamicQuizActivity4" />
        <activity android:name=".activity.DynamicQuizActivity5" />
        <activity android:name=".activity.DynamicQuiz_RecyclerActivity" />
        <activity android:name=".activity.QuizbayHomeActivity">

        </activity>

        <service
            android:name=".activity.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>